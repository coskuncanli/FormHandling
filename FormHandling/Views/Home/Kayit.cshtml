@{
    Layout = "_Layout";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mt-4">Kayıt Formu</h1>
        <form action="/Home/KayitPost" method="post">
           <label for="ad" class="form-label">Adınız</label>
           <input type="text" name="Ad" class="form-control" />

           <label for="soyad" class="form-label">Soyadınız</label>
           <input type="text" name="Soyad" class="form-control" />

           <label for="yas">Yaşınız</label>
           <input type="number" name="Yas" class="form-control" />

           <label for="adres">Adresiniz</label>
           <textarea name="Adres" class="form-control" rows="3"></textarea>

            <div class="btn-group mt-4">
               <input type="reset" class="btn btn-primary" value="Sıfırla" />
               <input type="submit" class="btn btn-danger" value="Kaydet" />
           </div>
        </form>
    </div>
</div>
